{% extends "layout.njk" %}
{% block  content %}
<h1> {{error}} </h1>
<h1> {{flash}} </h1>
<form action="/login" method="post">
<div class="input-group mb-3">
  <input required name="username" id="username" type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
</div>

<div class="input-group mb-3">
  <input required name="password" id="password" type="password" class="form-control" placeholder="Recipient's password" aria-label="Recipient's username" aria-describedby="basic-addon2">
</div>
<button type="submit" class="btn btn-primary">Log in</button>
</form>
  <a href="/signup" class="mt-3 d-block">Create account</a>
</main>
{% endblock %}