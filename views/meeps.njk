{% extends layout %}
{% block  content %}
<main class="container mt-3">
    {% include 'components/taskform.njk' %}
     <div>
        <ul class="list-group">
        {% for meep in meeps %}
            <li class="h-10rem-min list-group-item d-flex justify-content-between">
                <div class="custom-text-body">
                    {{meep.body}}
                </div>
                
                <div class="d-flex">
                    <a
                        href="/meeps/{{meep.id}}/delete"
                        class="btn btn-sm btn-danger h-25 text-size-05rem">
                        Delete meep
                    </a>
                </div>
            </li>
            {% endfor %}
        </ul>
    </div>
</main>
<script src="/js/complete.js"></script>
{% endblock %}